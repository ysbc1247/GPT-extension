{
    "manifest_version": 3,
    "name": "OpenAI Question Generator",
    "version": "1.0",
    "description": "Generate questions using OpenAI API based on highlighted text.",
    "permissions": ["contextMenus"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["contentScript.js"]
      }
    ]
  }
  